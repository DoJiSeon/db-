<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:id="@+id/contents_yeoulcom"
            android:src="@drawable/yeoulcom"/>
        <Button
            android:layout_width="260dp"
            android:layout_height="80dp"
            android:text="지출 장부"
            android:gravity="center"
            android:textSize="27dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/contentsbtn1"
            android:textColor="#404040"
            android:layout_below="@+id/contents_yeoulcom"
            android:background="@drawable/roundrectagle"/>
        <Button
            android:layout_width="260dp"
            android:layout_height="80dp"
            android:text="과자\u0026물품 신청"
            android:gravity="center"
            android:textSize="27dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/contentsbtn2"
            android:textColor="#ffffff"
            android:layout_below="@+id/contentsbtn1"
            android:background="@drawable/roundrectagle2"/>
        <Button
            android:layout_width="260dp"
            android:layout_height="80dp"
            android:text="More Info"
            android:gravity="center"
            android:textSize="27dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/contentsbtn3"
            android:textColor="#404040"
            android:layout_below="@+id/contentsbtn2"
            android:background="@drawable/roundrectagle"/>
    </RelativeLayout>
</LinearLayout>